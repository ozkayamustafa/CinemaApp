<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor"
    tools:context=".ui.ticket.fragments.cinema.CinemaFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_30sdp"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Today tickets"
               android:textSize="@dimen/_22ssp"
               android:textColor="@color/white"
               android:layout_marginStart="@dimen/_15sdp"
               android:textStyle="bold"
               />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_30sdp"
           android:background="@drawable/tickets_bg"
           android:orientation="horizontal"
           android:padding="@dimen/_12sdp"
           >
           <androidx.cardview.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:elevation="@dimen/_6sdp"
               app:cardCornerRadius="@dimen/_10sdp"
               >
               <ImageView
                   android:layout_width="@dimen/_100sdp"
                   android:layout_height="@dimen/_150sdp"
                   android:background="@android:color/transparent"
                   android:src="@drawable/movie1"
                   >
               </ImageView>
           </androidx.cardview.widget.CardView>

           <LinearLayout
               android:layout_width="@dimen/_155sdp"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginStart="@dimen/_20sdp"
               android:layout_marginTop="@dimen/_15sdp"
               >
               <LinearLayout
                   android:layout_width="@dimen/_75sdp"
                   android:layout_height="wrap_content"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="The Lost City"
                       android:textColor="@color/white"
                       android:textSize="@dimen/_18ssp"
                       android:textStyle="bold"
                       />
               </LinearLayout>

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_10sdp"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textStyle="bold"
                       android:text="8.9"
                       android:textSize="@dimen/_18ssp"
                       android:textColor="#F9A825"

                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintBottom_toBottomOf="parent"
                       >
                   </TextView>

                   <com.google.android.material.chip.Chip
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:backgroundTint="#F9A825"
                       android:text="IMDB 7.5"
                       android:layout_marginEnd="@dimen/_25sdp"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       >
                   </com.google.android.material.chip.Chip>

               </androidx.constraintlayout.widget.ConstraintLayout>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=" Aaron Nee"
                   android:textSize="@dimen/_14ssp"
                   android:textColor="#BDBDBD"
                   >
               </TextView>

           </LinearLayout>

       </LinearLayout>

       <!-- Second Card-->

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_30sdp"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Upcoming tickets"
                   android:textSize="@dimen/_22ssp"
                   android:textColor="@color/white"
                   android:layout_marginStart="@dimen/_15sdp"
                   android:textStyle="bold"
                   />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_30sdp"
               android:background="@drawable/tickets_bg"
               android:orientation="horizontal"
               android:padding="@dimen/_12sdp"
               android:layout_marginBottom="@dimen/_30sdp"
               >
               <androidx.cardview.widget.CardView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:elevation="@dimen/_6sdp"
                   app:cardCornerRadius="@dimen/_10sdp"
                   >
                   <ImageView
                       android:layout_width="@dimen/_100sdp"
                       android:layout_height="@dimen/_150sdp"
                       android:background="@android:color/transparent"
                       android:src="@drawable/movie2"
                       android:scaleType="fitXY"
                       >
                   </ImageView>
               </androidx.cardview.widget.CardView>

               <LinearLayout
                   android:layout_width="@dimen/_155sdp"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginStart="@dimen/_20sdp"
                   android:layout_marginTop="@dimen/_15sdp"
                   >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       >
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Doctor Strange in the Multiverse of Madness"
                           android:textColor="@color/white"
                           android:textSize="@dimen/_16ssp"
                           android:textStyle="bold"
                           />
                   </LinearLayout>

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/_10sdp"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textStyle="bold"
                           android:text="8.9"
                           android:textSize="@dimen/_18ssp"
                           android:textColor="#F9A825"

                           app:layout_constraintTop_toTopOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintBottom_toBottomOf="parent"
                           >
                       </TextView>

                       <com.google.android.material.chip.Chip
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:backgroundTint="#F9A825"
                           android:text="IMDB 7.5"
                           android:layout_marginEnd="@dimen/_25sdp"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           >
                       </com.google.android.material.chip.Chip>

                   </androidx.constraintlayout.widget.ConstraintLayout>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=" Sam Raimi"
                       android:textSize="@dimen/_14ssp"
                       android:textColor="#BDBDBD"
                       >
                   </TextView>

               </LinearLayout>

           </LinearLayout>

       </LinearLayout>
   </ScrollView>
</LinearLayout>